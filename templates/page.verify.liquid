                    //Function to Validate Phone Number on OTP step
                    function ValidatePhoneNumber(phone_number)
                    {
                        if (/^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{2,10}$/im.test(phone_number))
