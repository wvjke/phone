                        if (!ValidatePhoneNumber(val)) {
                            alert('Phone Number format is incorrect');
                            return false;
                        }

                        $.ajax({
                            type: "POST",
                            url: 'https://apt507.com/apartment/sendOTP',
                            crossDomain: true,
                            async: true,
                            data: {
                                "token": params['token'],
