                                        alert('Invalid phone number');
                                    } else {
                                        $('.progress_circle').hide();
                                        $('#step-send-otp').hide();
                                        $('#step-submit-otp').hide();

                                        if (data.attemptsNumber < 3) {
                                            $('#verification_failed').css('display', 'flex');
                                            $('.verification_failed_text').text(data.message);
                                        } else {
