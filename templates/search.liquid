<article class="search content container">
  {% paginate search.results by 48 %}

  {% comment %}
  Title
  {% endcomment %}
  <h3 class="text-center mb-4">
    {% if search.performed %}
    {{ search.results_count }} {{ search.results_count | pluralize: 'result', 'results' }} for "{{ search.terms }}"
    {% else %}
    Search
    {% endif %}
  </h3>

  <div class="row">
    <div class="d-none d-md-block col-md-6 offset-md-3 text-center mb-4">
      {% include 'search-bar' %}
    </div>
  </div>

  {% if search.performed %}
  {% if search.results_count == 0 %}
  <h4 class="text-center">No results</h4>
  {% else %}
  <div class="row">
    {% for item in search.results %}
    {% render 'search_tile', item: item %}
    {% endfor %}
  </div>

  <div class="d-flex justify-content-center">
    <div id="custom-pagination" class="main" data-pages="{{ paginate.pages }}"
      data-current="{{ paginate.current_page }}"></div>
  </div>
  {% endif %}
  {% endif %}
  {% endpaginate %}

</article>
