{% comment %} .sidenav-accordion {
    ul {
        height: 0px;
        overflow: hidden;
        transition: all .2s ease-in-out;
    }
    .fa-minus {
        display: none;
    }
    &.open {
        .fa-minus {
            display: block;
        }
        .fa-plus {
            display: none;
        }
    }
} {% endcomment %}

.embed-responsive-item {
    transition: all .2s ease-in-out;
}

.collection-navigation .collection-carousel-wrap {
    .slick-disabled {
        background: gray !important;
    }
}

.text-blue {
    color: #2561bd;
}

.add-to-cart-circle {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    background-color: #04086f;
    color: #fff;
    font-size: 1.4rem;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    text-align: center;
    justify-content: center;
    button {
        border: none;
        outline: none;
        background-color: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
    }
}

.add-to-cart-button {
    display: flex;
    background-color: #04086f;
    color: #fff;
}

.collection-product {
    a {
        height: 100%;
    }
    select {
        width: 100%;
    }
}

#cart-order-note {
    .fa-chevron-down {
        display: none;
    }
    &.show {
        .fa-chevron-down {
            display: inline-block;
        }
        .fa-chevron-up {
            display: none;
        }
    }
}

#shopify-section-header {
    header {
        transition: .5s ease-in-out;
    }
}

.product-thumbnails-slider {
    .carousel-prev, .carousel-next {
        padding: 1rem;
        border: 1px solid #ccc;
        margin: 0 10px;
    }
}

.product-image-container {
    .lazyloading, .lazyload {
        opacity: 1;
        transition: 600ms opacity;
        background: #f7f7f7 url({{ 'loader.gif' | asset_url }}) no-repeat center;
    }
    img, .responsive-image__wrapper {
        margin: 0 auto;
    }
}

.product {
    .product-thumbnail {
        border: 1px solid #ccc;
        min-width: 50px;
        min-height: 50px;
        width: 62px;
        margin: 0 3px;
        padding: 0;
        box-shadow: 2px 2px 0 rgba(0,0,0,0.1);
        &.slick-current {
            border: 1px solid #000;
        }
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }
    .product-thumbnails-slider {
        .slick-disabled  {
            color: gray;
        }
        .slick-track {
            padding: 3px 0;
        }
        .carousel-next, .carousel-prev {
            display: flex;
            align-items: center;
            min-width: 48px;
            height: 48px;
        }
    }
}

.product-image {
    padding: 1px;
    img {
        object-fit: contain;
        min-height: 400px;
        max-width: 100% !important;
    }
}

.collection-submit-btn {
    .spinner-border {
        width: 20px;
        height: 20px;
    }
}

.collection-product {
    select, select:focus {
        font-size: 16px;
    }
    img {
        width: 100%;
        height: 200px;
        object-fit: contain;
        background-color: #FFFFFF;
    }
    .collection-product-image {
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
    }
    .lazyloading, .lazyload {
        opacity: 1;
        transition: 600ms opacity;
        background: url({{ 'loader.gif' | asset_url }}) no-repeat center !important;
    }
    .collection-img-container {
        position: relative;
        .product-img-show-on-hover {
            position: absolute;
            width: 100%;
            top: 0;
            left: 0;
        }
        .product-img-fade-on-hover {
            position: relative;
            z-index: 5;
            transition: all .2s ease-in-out;
            &:hover {
                opacity: 0;
            }
        }
    }
}

img.lazyloading, img.lazyload {
    opacity: 1;
    transition: 600ms opacity;
    background: #f7f7f7 url({{ 'loader.gif' | asset_url }}) no-repeat center;
}

.blog-posts {
    .responsive-image__wrapper  {
        max-width: none !important;
        width: 100% !important;
    }
    .blog-posts-img-container {
        img {
            width: 100%;
            max-height: none !important;
            max-width: none !important;
            height: 300px;
            object-fit: contain;
        }
    }
}


