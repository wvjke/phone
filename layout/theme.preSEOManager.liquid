<!doctype html>
<html lang="{{ shop.locale }}" style="overflow-x: hidden;">
  <head>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

    {% include 'meta' %}

    {{ 'outdatedbrowser.min.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'outdatedbrowser.min.js' | asset_url }}" defer></script>

    <meta name="description" content="">
    <script src="{{ 'runtime.js' | asset_url }}" defer></script>
    <script src="{{ 'vendors.js' | asset_url }}" defer></script>
    <script src="{{ 'theme.layout.js' | asset_url }}" defer></script>

    <script type="text/javascript">
      window.ArnoldsBoatShop = {
        region: {{ settings.region | json }},
        zipEnabled: {{ settings.show_zip | json }},
        cartCurrency: {
          iso_code: {{ cart.currency.iso_code | json }},
          symbol: {{ cart.currency.symbol | json }},
          format: {{ shop.money_format | json }},
        },
        shippingOptions: {
          flat_shipping_rate: {{ settings.flat_shipping_rate | json }},
          free_shipping_threshold: {{ settings.free_shipping_threshold | json }},
          free_shipping_text: {{ settings.free_shipping_text | json }},
          flat_rate_text: {{ settings.flat_rate_text | json }},
          in_stock_messaging: {{ settings.in_stock_messaging | json }},
          out_of_stock_messaging: {{ settings.out_of_stock_messaging | json }},
          out_of_stock_with_overselling_messaging: {{ settings.out_of_stock_with_overselling_messaging | json }},
          out_of_stock_amt_messaging: {{ settings.out_of_stock_amt_messaging | json }},
          out_of_stock_amt_messaging_with_overselling: {{ settings.out_of_stock_amt_messaging_with_overselling | json }},
          shipping_policy: {{ settings.shipping_policy | json }},
          terms_conditions: {{ settings.terms_conditions | json }},
        },
        ratingText: {
          ratings_bold: {{ settings.ratings_bold | json }},
          ratings_regular: {{ settings.ratings_regular | json }},
        },
        productsCount: {{ shop.products_count }},
        currentCollectionPath: [],
      };
      {% if customer %}
        var _learnq = _learnq || [];
        _learnq.push(['identify', {
          $email: {{ customer.email | json }},
          $first_name: {{ customer.first_name | json }},
          $last_name: {{ customer.last_name | json }},
        }]);
      {% endif %}
    </script>

    {{ content_for_header }}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css"
    integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ="
    crossorigin="anonymous">
    {{ 'theme.layout.css' | asset_url | stylesheet_tag }}

    {%- if settings.scripts_gtm_use and settings.scripts_gtm_head -%}
      {{ settings.scripts_gtm_head }}
    {%- endif -%}
    {{ shop.metafields.okendo.ReviewsWidgetStyleTag }}
    {{ shop.metafields.okendo.StyleCustomizations }}

  </head>
  <body style="overflow-x: hidden;">
    <div id="search-backdrop-root"></div>
    {% include 'browser-outdated' %}
    {%- if settings.scripts_gtm_use and settings.scripts_gtm_body -%}
      {{ settings.scripts_gtm_body }}
    {%- endif -%}

    {% section 'header' %}
    <div class="main-content">
      {{ content_for_layout }}
    </div>
    {% section 'footer' %}

    <aside id="cart-drawer"></aside>

    {% include 'swymSnippet' %}

    {% include 'script-tags' %}
    <script>
function ju_init(){
    jju('.ju_controls_btn').css('z-index',9999999999);
}
    </script>
  </body>
</html>
