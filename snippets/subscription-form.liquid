<form id="email_signup" action="//manage.kmail-lists.com/subscriptions/subscribe" method="POST">
  <input type="hidden" name="g" value="{{ settings.klaviyo_list_id }}" required>
  <div class="row justify-content-center">
    <div class="d-none d-lg-block col-lg-6">
      <div class="input-group input-group-lg w-100">
        <input type="email" class="form-control bg-light border-0" value="" name="email" id="k_id_email" placeholder="Email address">
        <div class="input-group-append">
          <button class="btn btn-secondary btn-lg" type="submit">Sign Up</button>
        </div>
      </div>
    </div>
    <div class="d-block d-lg-none col-12">
      <input type="email" class="form-control-lg bg-light border-0 d-block w-100" value="" name="email" id="k_id_email" placeholder="Email address">
      <button class="btn btn-secondary btn-lg mt-3 d-block w-100" type="submit">Sign Up</button>
    </div>
  </div>
</form>
