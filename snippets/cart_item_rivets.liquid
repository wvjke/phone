<div class="mb-4 mb-sm-2" rv-each-item="cart.items">
  <div class="row">
    <div class="col-sm-3 col-md-2">
      <div class="mb-4 mb-sm-0 text-center text-sm-left">
        <a rv-href="item.url" rv-title="item.title" class="d-inline-block">
          <img rv-src="item.image" rv-alt="item.handle" class="mw-100">
        </a>
      </div>
    </div>
    <div class="d-flex align-items-md-center col-sm-9 col-md-10">
      <div class="w-auto align-items-sm-center align-items-md-start row">
        <div class="col-md-5">
          <a rv-href="item.url" rv-title="item.title">
            <h3 class="h6 mb-3 mb-sm-2" rv-text="item.product_title"></h3>
          </a>
          <span class="d-inline-block mb-2 mb-sm-0"></span>
        </div>
        <div class="col-4 col-sm-3 col-md-2">
          <div class="text-right d-flex d-md-block" rv-html="item.price | money"></div>
        </div>
        <div class="col-4 col-sm-3 col-md-2">
          <div class="text-right d-flex d-md-block justify-content-center justify-content-sm-start">
            <input class="qty-field mw-100 text-center px-2 py-1" type="number" min="1" rv-value="item.quantity" name="updates[]" rv-id="item.key | prepend 'updates_'" rv-data-cart-update="index | plus 1">
          </div>
        </div>
        <div class="col-4 col-sm-3 col-md-2">
          <div class="text-right d-flex d-md-block justify-content-end justify-content-sm-start" rv-html="item.line_price | money"></div>
        </div>
        <div class="col-sm-3 col-md-1">
          <a rv-href="index | plus 1 | prepend '/cart/change?line=' | append '&amp;quantity=0'" rv-data-cart-remove="index | plus 1" class="text-right d-flex d-sm-block justify-content-end justify-content-sm-start" style="cursor: pointer;">
            <i class="fas fa-times-circle"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
