<div class="{% unless forloop.last == true %}border-bottom{% endunless %} py-2">
  <div class="row">
    <div class="col-4 col-sm-3 col-md-1 offset-4 offset-sm-0">
      <div class="text-center">
        <a href="{{ item.url }}"><img src="{{ item | img_url: '80x80', crop: 'center' }}" alt="{{ item.handle }}" class="img-fluid product-image my-2" /></a>
      </div>
    </div>
    <div class="col-12 col-sm-9 col-md-11">
      <div class="row align-items-center h-100">
        <div class="col-md-5 product-info text-center text-md-left my-3 my-md-0">
          <a href="{{ item.url }}"><h3 class="product-name">{{ item.product.title }}</h3></a>
          {%- unless item.variant.title contains "Default" -%}
            {%- for option in item.variant.options -%}
              <span class="d-inline-block">
                <strong class="pr-1">{{ item.product.options[forloop.index0] }}:</strong>
                {%- if forloop.last == false -%}
                  {{ option }}<span class="pr-1">,</span>
                {%- else -%}
                  {{ option }}</span>
                {%- endif -%}
            {%- endfor -%}
          {%- endunless -%}
        </div>
        <div class="col-7 col-md-2">
          <div class="text-left text-sm-right d-flex d-md-block">{{ item.price | money }}</div>
        </div>
        <div class="col-4 col-md-2">
          <div class="text-right quantity-input">
            <input class="qty-field text-center pl-2 py-1 pr-0" type="number" name="updates[]" id="updates_{{ item.key }}" min="1" value="{{ item.quantity }}" min="1" {%- if item.variant.inventory_management == 'shopify' and item.variant.inventory_policy == 'deny' -%} max="{{ item.variant.inventory_quantity }}"{%- endif -%} value="{{ item.quantity }}">
          </div>
        </div>
        <div class="col-1 col-md-1 px-0 px-md-auto">
          <div class="text-left pb-1">
            <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" title="Remove item" class="d-block d-md-inline w-100">
              <i class="fas fa-times-circle cross-icon"></i>
            </a>
          </div>
        </div>
        <div class="col-11 col-md-2">
          <div class="text-right font-weight-bold mt-2 mt-md-0">{{ item.line_price | money }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
