<div class="col-12 col-lg-6 horizontal-slider-image">
  <div class="">
    <div id="product-slider" class="carousel slide">
      <!-- The slideshow -->
      <div class="carousel-inner">
        {%- for image in product.images -%}
          <div class="carousel-item {% if forloop.first == true %}active{% endif %} pb-4" {%- if image.variants.size > 0 -%} data-switcher-image-variants="{{ image.variants | map: 'id' | json }}"{%- endif -%}>
            <div class="w-100">
              <img src="{{ image | img_url: '490x695' }}" alt="{{ product.title }}" class="img-fluid">
            </div>
          </div>
        {%- endfor -%}
      </div>
      {%- if product.images.size > 1 -%}
        <div class="carousel-indicators-container">

          <!-- Indicators -->
          <ul class="carousel-indicators row">
            {%- for image in product.images -%}
              <li data-target="#product-slider" data-slide-to="{{ forloop.index | minus: '1' }}" id="slide-{{ forloop.index }}" class="col-3 pb-2 {% if forloop.first == true %}active{% endif %} {% if forloop.index >= 5 %} collapse multi-collapse{%- endif -%}" {%- if image.variants.size > 0 -%} data-switcher-image-thumbnail-variants="{{ image.variants | map: 'id' | json }}"{%- endif -%}>
                <img src="{{ image | img_url: '160x160', crop: 'center' }}" alt="{{ product.title }}" class="img-fluid">
              </li>
            {%- endfor -%}
            {%- if product.images.size > 4 -%}
              <div class="col-12 d-none d-md-block">
                <button class="btn btn-block btn-light collapsed mb-4 rotate" data-toggle="collapse" data-target=".multi-collapse" type="button" aria-expanded="false" aria-controls="{%- for image in product.images -%}slide-{{ forloop.index }} {%- endfor -%}" title="View more">
                  <i class="fas fa-angle-down"></i>
                </button>
              </div>
            {%- endif -%}
          </ul>
        </div>
        <a class="carousel-control-prev d-flex d-md-none link" href="#product-slider" data-slide="prev">
          <span class="fas fa-chevron-left"></span>
        </a>
        <a class="carousel-control-next d-flex d-md-none link" href="#product-slider" data-slide="next">
          <span class="fas fa-chevron-right"></span>
        </a>
      {%- endif -%}
    </div>
  </div>
</div>
